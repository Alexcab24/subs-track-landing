---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import SubscriptionsList from "../../components/dashboard/SubscriptionsList.astro";
import ExpensesChart from "../../components/dashboard/ExpensesChart.astro";
---

<DashboardLayout title="Dashboard - Sublyt">
    <div class="space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
                <p class="mt-1 text-sm text-gray-500">
                    Manage your subscriptions and monitor your expenses
                </p>
            </div>

            {/* Construction indicator */}
            <div class="flex items-center space-x-4">
                <div class="h-8 w-32 bg-gray-200 rounded animate-pulse"></div>
                <div class="h-8 w-8 bg-gray-200 rounded-full animate-pulse">
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {/* Stats - Work in Progress */}
            <div class="col-span-3 grid grid-cols-1 sm:grid-cols-3 gap-6">
                {
                    [
                        { label: "Monthly Spend", value: "---", change: "+5%" },
                        {
                            label: "Active Subscriptions",
                            value: "---",
                            change: "0",
                        },
                        { label: "Next Payment", value: "---", date: "---" },
                    ].map((stat) => (
                        <div class="bg-white rounded-lg shadow p-6">
                            <div class="animate-pulse">
                                <div class="h-4 w-24 bg-gray-200 rounded" />
                                <div class="mt-4 h-6 w-16 bg-gray-300 rounded" />
                                <div class="mt-2 h-3 w-20 bg-gray-100 rounded" />
                            </div>
                        </div>
                    ))
                }
            </div>

            {/* Subscriptions list */}
            <div class="col-span-3 lg:col-span-2">
                <SubscriptionsList />
            </div>

            {/* Expenses chart */}
            <div class="col-span-3 lg:col-span-1">
                <ExpensesChart />
            </div>
        </div>
    </div>
</DashboardLayout>
